@model User

@{
    ViewBag.Title = "User Details";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Name</h1>
            </div>

            <div class="card-body text-center">
                @*<img class="card-img-top" src="~/images/noimage.jpg"
                     asp-append-version="true" />*@

                <h4>User ID : @Model.Id</h4>
                <h4>Phone Number : @Model.Phone</h4>
                <h4>Oustanding Balance : @Model.Balance</h4>
                <h4>Email : @Model.Email</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index"
                   class="btn btn-primary">Back</a>
                @*<a asp-controller="home" asp-action="paybill" asp-route-id="@Model.Id"
                   class="btn btn-primary">Settle Balance</a>*@
                @*<a asp-controller="home" asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-danger">Delete </a>*@
            </div>
        </div>
    </div>
</div>